                            <% } %>
                </select>
                    <select name="Choice4" class="form-control" title="Please Select Your Fourth Choice of Guide." style="width: 50%; margin-top: 3%;" onchange="SelectFour()">
                        <option value="" selected disabled hidden>Fourth Choice</option>
                        <% for(var i=0; i < guide.length; i++) { %>
                            <option value="<%= guide[i].id %>"><%= guide[i].name %></option>
                        <% } %>
                </select>
                    <select name="Choice5" class="form-control" title="Please Select Your Fifth Choice of Guide." style="width: 50%; margin-top: 3%;" onchange="SelectFive()">
                        <option value="" selected disabled hidden>Fifth Choice</option>
                        <% for(var i=0; i < guide.length; i++) { %>
                            <option value="<%= guide[i].id %>"><%= guide[i].name %></option>
                        <% } %>
                </select>
                    <button disabled type="submit" class="btn btn-md btn-primary" style="margin-top: 5%;" id='myButton'>Confirm Selection</button>
                    </center>
                </form>
            </div>
            <div class="container-fluid" style="width:40%; float: left; overflow: hidden; border: 1px solid gray;">
                <center>
                    <p style="font-size: medium; margin-top: 10%; color: #007bff;">Your Selections</p>
                    <p style="color: black;" id='one'>1. Not Selected</p>
                    <p style="color: black;" id='two'>2. Not Selected</p>
