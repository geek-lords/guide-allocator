                        <% } %>
                    </select>
                    <select name="Choice2" class="form-control" title="Please Select Your Second Choice of Guide." style="width: 50%; margin-top: 3%;" onchange="SelectTwo()">
                        <option value="" selected disabled hidden>Second Choice</option>
                        <% for(var i=0; i < guide.length; i++) { %>
                            <option value="<%= guide[i].id %>"><%= guide[i].name %></option>
                        <% } %>
                </select>
                    <select name="Choice3" class="form-control" title="Please Select Your Third Choice of Guide." style="width: 50%; margin-top: 3%;" onchange="SelectThree()">
                        <option value="" selected disabled hidden>Third Choice</option>
                        <% for(var i=0; i < guide.length; i++) { %>
